
@model UserViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "_MemberLayout";
}
<h3 class="text-center">Kullanıcı Bilgileri</h3>
<div class="row">
    <div class="col-sm-3">
        <img style="width:100%; height:100%" src="@Model.Picture" />
    </div>
    <div class="col-sm-9">

        <table class="table table-bordered table-striped">
            <tr>
                <th>Kullanıcı ismi</th>
                <td>@Model.UserName</td>
            </tr>
            <tr>
                <th>E-posta</th>
                <td>@Model.Email</td>
            </tr>

<h2>Index</h2> 
            <tr>
                <th>Telefon no</th>
                <td>@Model.PhoneNumber</td>
                  <tr>
              
            </tr>
            <tr>
                <th>Doğum tarihi</th>
                <td>@Model.BirthDay.Value.ToShortDateString()</td>
            </tr>

            <tr>
                <th>Cinsiyet</th>
                <td>@Model.Gender</td>
            </tr>
            </tr>
        </table>
    </div>
</div> 